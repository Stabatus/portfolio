---
import "./layout.css";
import Footer from "@/comp/Footer/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <link
      rel="stylesheet"
      href="https://use.typekit.net/bru3olk.css"
    />
    <title>{title}</title>
  </head>
  <body>
    <img
      class="background"
      src="/backgroundPerlin.png"
    />
    <slot />
    <Footer />
  </body>
</html>
